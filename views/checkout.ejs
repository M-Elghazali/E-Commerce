        <link rel="stylesheet" href="../src/css/normalize.css">
        <link rel="stylesheet" href="../src/css/framework.css">
        <link rel="stylesheet" href="../src/css/styles.css">
        <!-- ------------- -->

    </head>
    <body>
        <section class="event bg-color-2">
            <div class="container d-flex-center">
                <p class="fs-14 lh-21 text-color fw-400 text-center">Summer Sale
                    For All
                    Swim Suits And Free Express Delivery - OFF 50%! <a href="#"
                        class="fw-600 lh-24 text-color">ShopNow</a></p>
                <p class="fs-14 lh-21 text-color fw-400 d-flex-center ">English
                    <i
                        class="fa-solid fa-angle-down"></i></p>
            </div>
        </section>
        <section class="navbar" id="navbar">
            <div class="wrapper d-flex justify-between align-center">
                <div class="nav-logo">
                    <a href="../"><h1
                            class="fs-24 lh-24 black-color fw-700"
                            style="letter-spacing: .72px;">XPECTED</h1>
                    </a>
                </div>
                <div class="nav-links d-flex align-center gap-30 ">
                    <a href="../">Home</a>
                    <a href="/contact">Contact</a>
                    <!-- <a href="../about/">About</a> -->
                    <a href="/signup" class="active">Sign Up</a>
                </div>
                <div class="nav-last d-flex align-center gap-20">
                    <div class="nav-search d-flex align-center justify-center
                gap-5">
                        <input type="text"
                            placeholder="What are you looking for?">
                        <i
                            class="fa-solid fa-regular fa-magnifying-glass pointer"></i>
                    </div>
                    <div class="nav-icons d-flex gap-20">
                        <!-- <i class="fa-sharp fa-solid fa-heart"></i> -->

                        <a href="/cart" style="color:#000"><i
                                class="fa-sharp fa-solid fa-cart-shopping"></i></a>
                        <% if (loggedIn) { %>

                        <div class="logged-wrapper" style="display: block;">
                            <h3>My Account</h3>
                            <div class="logged-mini">
                                <a href="/logout">Logout</a>
                                <div class="logged-info">
                                    <div class="user-img">
                                        <img src="src/imgs/user.png" alt>
                                    </div>
                                    <div class="user-email-info">
                                        <h3><%= user.name %></h3>
                                        <h5><%= user.email %></h5>
                                    </div>
                                </div>
                                <div class="mange-area">
                                    <a href="/account">View account</a>
                                    <a href="/order">My orders</a>
                                </div>
                            </div>
                        </div>
                        <% } else { %>
                        <div class="user-wrapper" style="display: block;">
                            <i class="fa-sharp fa-solid fa-user"
                                id="userIcon"></i>
                            <div class="login-mini">
                                <h3>Not Logged In ?</h3>
                                <a href="/signup">Create an account</a>
                                <a href="/login">Login now</a>
                            </div>
                        </div>

                        <% } %>
                        <i class="fa-solid fa-bars" id="dropMenuBtn"></i>
                    </div>
                </div>
            </div>
        </section>
        <div class="dropMenu">
            <i class="fa-solid fa-x" id="closeMenu"></i>
            <div class="nav-links-phones">
                <div class="nav-logo">
                    <a href="./"><h1
                            class="fs-24 lh-24 black-color fw-700"
                            style="letter-spacing: .72px;">XPECTED</h1>
                    </a>
                </div>
                <a href="../" class="active">Home</a>
                <a href="/contact">Contact</a>
                <!-- <a href="../about/">About</a> -->
                <a href="/signup">Sign Up</a>
            </div>
        </div>
        <div class="dropMenuOverlay"></div>
        <section class="checkout">
            <div class="container ">
                <div class="checkout-left">
                    <h3 class="fs-32 fw-500 lh-30">Billing Details</h3>
                    <form action>
                        <div class="input">
                            <label for="name">First Name<span>*</span></label>
                            <input type="text" id="name">
                        </div>
                        <div class="input">
                            <label for="company">Company Name</label>
                            <input type="text" id="company">
                        </div>
                        <div class="input">
                            <label for="street">Street
                                Address<span>*</span></label>
                            <input type="text" id="street">
                        </div>
                        <div class="input">
                            <label for="apart">Apartment, floor, etc.
                                (optional)</label>
                            <input type="text" id="apart">
                        </div>
                        <div class="input">
                            <label for="town">Town/City<span>*</span></label>
                            <input type="text" id="town">
                        </div>
                        <div class="input">
                            <label for="phone">Phone
                                Number<span>*</span></label>
                            <input type="text" id="phone">
                        </div>
                        <div class="input">
                            <label for="email">Email
                                Address<span>*</span></label>
                            <input type="email" id="email">
                        </div>
                        <div class="input checker">
                            <input type="checkbox" id="checkbox">
                            <label for="checkbox">Save this information for
                                faster check-out next time</label>
                        </div>
                    </form>
                </div>
                <div class="checkout-right">
                    <div class="checkout-top">
                        <div class="product-check-info">
                            <div class="product-image-price">
                                <img
                                    src="https://cdn.discordapp.com/attachments/1146087594367664238/1164733477573361764/image.png?ex=65444994&is=6531d494&hm=38a9f99a851ceecf4c199d832defc0d25b2914e9dfbf2174191de883ab48d0c0&"
                                    alt style="width: 48px;">
                                <h4>H1 Gamepad</h4>
                            </div>
                            <p>$650</p>
                        </div>
                        <div class="product-check-info">
                            <div class="product-image-price">
                                <img
                                    src="https://cdn.discordapp.com/attachments/1146087594367664238/1164733354474754169/image.png?ex=65444977&is=6531d477&hm=e90856a2c0606a6202ef301fe696e299aad08bad0c6f1399472119aa6ef11ad0&"
                                    alt style="width: 48px;">
                                <h4>LCD Monitor</h4>
                            </div>
                            <p>$1100</p>
                        </div>
                    </div>
                    <div class="checkout-center">
                        <div class="price-info">
                            <p>Subtotal:</p>
                            <p>$1750</p>
                        </div>
                        <div class="price-info">
                            <p>Shipping:</p>
                            <p>Free</p>
                        </div>
                        <div class="price-info">
                            <p>Total:</p>
                            <p>$1750</p>
                        </div>
                    </div>
                    <div class="checkout-bottom">
                        <div class="pay-method">
                            <input type="radio" id="bank">
                            <label for="bank">Bank</label>
                            <img
                                src="https://cdn.discordapp.com/attachments/1146087594367664238/1164740313559093428/visa.svg?ex=65444ff2&is=6531daf2&hm=ce43db7cbfc3ba4436a5b64fea10f0cd14dd567e2e46890bd8641bfd3db484a5&"
                                alt>
                        </div>
                        <div class="pay-method">
                            <input type="radio" id="delivery">
                            <label for="delivery">Cash on delivery</label>
                        </div>
                        <div class="pay-box">
                            <input type="text" placeholder="Coupon Code">
                            <button>Apply Coupon</button>
                        </div>
                        <button>Place Order</button>
                    </div>
                </div>
            </div>
        </section>
        <section class="footer bg-color-2">
            <div class="container ">
                <div class="footer-main d-flex">
                    <div class="footery footer-1">
                        <h3 class="fs-24 fw-700 lh-24 text-color">XPECTED</h3>
                        <h4 class="fs-20 fw-500 lh-28 text-color">Subscribe</h4>
                        <p class="fs-16 fw-400 lh-24 text-color"
                            style="width: 206px;">Get 10% off
                            your first
                            order</p>
                        <div class="box">
                            <input type="email" name id
                                placeholder="Enter your email">
                            <i class="fa-regular fa-paper-plane-top"></i>
                        </div>
                    </div>
                    <div class="footery footer-2">
                        <h3 class="fs-20 fw-500 lh-28 text-color">Support</h3>
                        <p class="fs-16 fw-400 lh-24 text-color">111 Bijoy
                            sarani, Dhaka, DH 1515, Bangladesh.</p>
                        <p
                            class="fs-16 fw-400 lh-24 text-color">XPECTED@gmail.com</p>
                        <p
                            class="fs-16 fw-400 lh-24 text-color">+88015-88888-9999</p>
                    </div>
                    <div class="footery footer-3">
                        <h3 class="fs-20 fw-500 lh-28 text-color">Account</h3>
                        <a href="/account">My Account</a>
                        <a href="/login"
                            style="max-width: 125px; width: 125px;">Login /
                            Register</a>
                        <a href="checkout.html">Cart</a>
                        <a href="/order">My Orders</a>
                        <a href="../">Shop</a>
                    </div>

                </div>
                <div class="footer-cr"><p class="w-fit"
                        style="margin-inline:auto;">Copyright All-Father
                        2023. All right
                        reserved</p></div>
            </div>
        </section>
        <!-- ======================================================== -->
        <script src="../src/js/script.js"></script>
        <!-- Swiper JS -->
        <script type="text/javascript"
            src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
        <script>
        $(document).ready(function(){
            $('.slider').slick({
                slidesToShow: 4, // عدد الصور التي تظهر في كل مرة
                slidesToScroll: 1, // عدد الصور التي تتمرر بكل مرة
                autoplay: true, // تشغيل التمرير التلقائي
                autoplaySpeed: 2000, // سرعة التمرير التلقائي بالميلي ثانية
                infinite: true, // السماح بالتكرار اللامنتهي
            });
        });
    </script>
        <script src="../src/js/main.js"></script>
    </body>
</html>